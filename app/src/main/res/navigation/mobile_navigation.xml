<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.dablaze.wikiapp.ui.home.ExploreFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.dablaze.wikiapp.ui.dashboard.FavoritesFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_favorities" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.dablaze.wikiapp.ui.notifications.HistoryFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_history" />
</navigation>